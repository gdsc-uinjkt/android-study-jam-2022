<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.SettingsActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/switchDarkMode"
        android:layout_alignBottom="@id/switchDarkMode"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="16dp"
        android:layout_toStartOf="@id/switchDarkMode"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:text="@string/label_dark_mode" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>